  <div class="text-2xl flex justify-center gap-4 text-black border-black border-y-2 w-fit mx-auto" id="timer">
    <div><span id="days">00</span> <span class="block text-sm">D√≠as</span></div>
    <div><span id="hours">00</span> <span class="block text-sm">Horas</span></div>
    <div><span id="minutes">00</span> <span class="block text-sm">Minutos</span></div>
    <div><span id="seconds">00</span> <span class="block text-sm">Segundos</span></div>
  </div>
  
